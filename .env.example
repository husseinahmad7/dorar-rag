# Example environment variables for Dorar Shia Hadith System

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Vector Database Control
# Set to False to globally disable vector database functionality
VECTOR_DB_ENABLED=True

# Embedding Configuration
DEFAULT_EMBEDDING_MODEL=gemini-embedding-001
EMBEDDING_OUTPUT_DIMENSIONALITY=3072
DEFAULT_LLM_MODEL=gemini-1.5-flash-002

# ChromaDB Configuration
CHROMA_DB_PATH=./chroma_db

# Agentic RAG Configuration
MAX_SUBAGENTS=2
MEMORY_BUFFER_SIZE=10
AGENTIC_RAG_ENABLED=True
DEFAULT_USE_INTERNET_FOR_AGENT=True
AGENT_MAX_RUNTIME_SECONDS=60

# Feature Flags
PREFER_GEMINI_EMBEDDINGS=True

# To disable vector database globally (when not working):
# VECTOR_DB_ENABLED=False
# USE_LOCAL_EMBEDDINGS=True
